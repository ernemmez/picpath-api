{
    "compilerOptions": {
       "target": "es2016",
       "module": "commonjs",
       "rootDir": "./",
       "resolveJsonModule": true, /* in case you are importing JSON files */
       "outDir": "./build",
       "esModuleInterop": true,
       "forceConsistentCasingInFileNames": true,
       "strict": true,
       "noImplicitAny": true,
       "skipLibCheck": true,
    },
    "include": [
       "src/api",
       "package.json"
    ],
    "exclude": [
       "src/api/**/*.test.ts"
    ]
}